<?xml version="1.0" encoding="utf-8"?>

<!--using relative layout for UI design-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/text_result"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textStyle="bold"
        android:textSize="70dp"
        android:layout_alignParentRight="true"

        android:textColor="@color/white"
        android:layout_above="@+id/button_two"
        android:layout_marginBottom="18dp"
        android:layout_height="80dp"/>
    
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_clear"
        android:src="@drawable/button_cc"/>

    <ImageView
        android:layout_width="80dp"
        android:id="@+id/button_zero"
        android:layout_alignParentBottom="true"
        android:src="@drawable/button_zero"
        android:elevation="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="100dp"
        android:clickable="true"
        android:layout_height="80dp"/>

    <ImageView
        android:layout_width="80dp"
        android:id="@+id/button_equals"
        android:layout_alignParentBottom="true"
        android:src="@drawable/button_equals"
        android:layout_marginRight="20dp"
        android:elevation="20dp"
        android:layout_toRightOf="@+id/button_zero"
        android:clickable="true"
        android:layout_height="80dp"/>

    <ImageView
        android:layout_width="80dp"
        android:id="@+id/button_subtract"
        android:layout_alignParentBottom="true"
        android:src="@drawable/button_minus"
        android:elevation="20dp"
        android:layout_toRightOf="@+id/button_equals"
        android:clickable="true"
        android:layout_height="80dp"/>
    
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_add"
        android:id="@+id/button_add"
        android:layout_above="@+id/button_equals"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_multiply"
        android:id="@+id/button_multiply"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/button_add"
        android:layout_marginBottom="10dp"/>
    
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_divide"
        android:id="@+id/button_divide"
        android:layout_above="@+id/button_multiply"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_nine"
        android:id="@+id/button_nine"
        android:layout_toLeftOf="@+id/button_add"
        android:layout_above="@+id/button_equals"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_eight"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/button_eight"
        android:layout_toLeftOf="@+id/button_nine"
        android:layout_above="@+id/button_zero"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_seven"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_seven"
        android:layout_above="@+id/button_clear"
        android:layout_toLeftOf="@+id/button_eight"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_six"
        android:layout_above="@id/button_nine"
        android:layout_toLeftOf="@+id/button_multiply"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:id="@+id/button_six"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_five"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_five"
        android:layout_toLeftOf="@+id/button_six"
        android:layout_above="@+id/button_eight"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_four"
        android:id="@+id/button_four"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/button_five"
        android:layout_above="@+id/button_seven"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/button_three"
        android:id="@+id/button_three"
        android:layout_toLeftOf="@+id/button_divide"
        android:layout_above="@+id/button_six"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_two"
        android:src="@drawable/button_two"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button_five"
        android:layout_toLeftOf="@+id/button_three"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button_one"
        android:src="@drawable/button_one"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/button_two"
        android:layout_above="@+id/button_four"/>

</RelativeLayout>